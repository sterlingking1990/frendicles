{
  "name": "friendicle-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "concurrently": "^5.0.0",
    "express": "^4.17.1",
    "firebase": "^7.4.0",
    "history": "^4.10.1",
    "moment": "^2.24.0",
    "node-sass": "^4.13.0",
    "nodemon": "^1.19.4",
    "react": "^16.11.0",
    "react-dates": "^21.5.0",
    "react-dom": "^16.11.0",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.2.0",
    "redux": "^4.0.4"
  },
  "scripts": {
    "start": "node server/server.js",
    "server": "nodemon server/server.js",
    "friendicle-app": "yarn start --prefix friendicle-app",
    "dev": "concurrently \"yarn run server\" \"yarn run friendicle-app\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false yarn install --prefix friendicle-app && yarn run build --prefix friendicle-app",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "friendicle-app-install": "yarn install --prefix friendicle-app"
  },
  "proxy": "http://localhost:5000",
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
